<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gameover"
    tools:context=".GameOverActivity">


    <ImageButton
        android:id="@+id/newgamebutton"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginEnd="265dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/playinvert"
        app:layout_constraintEnd_toStartOf="@+id/highscorebutton1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/highscorebutton1"
        android:layout_width="0dp"
        android:layout_height="144dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/trophyinvert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newgamebutton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/menubutton"
        android:layout_width="161dp"
        android:layout_height="113dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/menuiconinvert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>